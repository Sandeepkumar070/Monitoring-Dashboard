<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spiro_Andon</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Spiro_Andon.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">


    <style>
        body {
            background-color: whitesmoke !important;
        }
        #sidebar {
            position: fixed;
    
            top: 70px;
  
            left: 0;
            overflow-y: auto;
            border-radius: 0 10px 10px 0;
            background-color: white !important;          
        }

        footer {
            position: fixed;
            bottom: 0;
            left: 0;
            height: 40px;
            width: 100%;
            background-color: #f8f9fa;
            border-top: 1px solid #ccc;
            padding: 2px 0;
            display: flex;
            align-items: center;
            font-size: 14px;
        }

            footer div {
                margin-left: 0px; /* offset from sidebar */
                font-size: 18px;
                font-family: 'Times New Roman', Times, serif;
            }




        /* Hover effect for the menu items */
        nav a:hover, nav div:hover {
            background-color: teal; /* Light background on hover */
            color: #000; /* Dark text on hover */
            border-bottom-left-radius:5px;
            border-bottom-right-radius:5px;
            border-top-left-radius:5px;
            border-top-right-radius:5px;
          
        }
    </style>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" style="display: flex; justify-content: space-between; align-items: center;">
                <!-- Left: Logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="display: flex; align-items: center;">
                    <img src="~/Image/pitech.png" alt="Spiro Logo" style="height: 40px;" />
                </a>

                <!-- Right: Login info -->
                <div style="text-align: right; font-size: 14px; color: #333;">
                    <div style="font-weight: bold;">Login By:</div>
                    <div style="color: #007bff;">Sandeep Kumar</div> <!-- Replace with dynamic user if needed -->
                </div>

                <!-- Navbar toggler (mobile) -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    @if (ViewBag.HideSidebar == null || !(bool)ViewBag.HideSidebar)
    {


        <!-- Sidebar Container -->
        <nav id="sidebar" style="width: 220px; height: calc(100vh - 50px); background-color: #fff; border-right: 1px solid #ccc; padding: 20px; font-family: 'Segoe UI', sans-serif; box-sizing: border-box; overflow-y: auto;">

            <!-- Home -->
            <div style="margin-bottom: 12px;">
                <a href="/Home/Index" onclick="setActive(this)"
                   style="display: flex; align-items: center; text-decoration: none; color: #333; font-size: 15px; padding: 10px; border-radius: 6px; transition: background-color 0.3s ease;">
                    🏠 <span style="margin-left: 10px;">Dashboard</span>
                </a>
            </div>

            <!-- Safety -->
            <div style="margin-bottom: 12px;">
                <div onclick="toggleMenu(this)" style="display: flex; justify-content: space-between; align-items: center; cursor: pointer; color: #333; font-size: 15px; padding: 10px; border-radius: 6px; transition: background-color 0.3s ease;">
                    <span style="display: flex; align-items: center;">🛡️ <span style="margin-left: 10px;">Safety</span></span>
                    ▼
                </div>
                <div style="display: none; padding-left: 25px;">
                    <a href="/Home/Privacy" onclick="setActive(this)"
                       style="display: block; text-decoration: none; color: #555; font-size: 14px; padding: 6px 0; transition: background-color 0.3s ease;">Incident Form</a>
                </div>
            </div>

            <!-- Quality -->
            <div style="margin-bottom: 12px;">
                <div onclick="toggleMenu(this)" style="display: flex; justify-content: space-between; align-items: center; cursor: pointer; color: #333; font-size: 15px; padding: 10px; border-radius: 6px; transition: background-color 0.3s ease;">
                    <span style="display: flex; align-items: center;">⚙️ <span style="margin-left: 10px;">Quality</span></span>
                    ▼
                </div>
                <div style="display: none; padding-left: 25px;">
                    <a href="/Home/QualityForm" onclick="setActive(this)"
                       style="display: block; text-decoration: none; color: #555; font-size: 14px; padding: 6px 0; transition: background-color 0.3s ease;">Defact</a>
                </div>
            </div>

            <!-- Delivery -->
            <div style="margin-bottom: 12px;">
                <div onclick="toggleMenu(this)" style="display: flex; justify-content: space-between; align-items: center; cursor: pointer; color: #333; font-size: 15px; padding: 10px; border-radius: 6px; transition: background-color 0.3s ease;">
                    <span style="display: flex; align-items: center;">🚚 <span style="margin-left: 10px;">Delivery</span></span>
                    ▼
                </div>
                <div style="display: none; padding-left: 25px;">
                    <a href="/Home/Delevery" onclick="setActive(this)"
                       style="display: block; text-decoration: none; color: #555; font-size: 14px; padding: 6px 0; transition: background-color 0.3s ease;">Schedule</a>
                </div>
            </div>

            <!-- Cost -->
            <div style="margin-bottom: 12px;">
                <div onclick="toggleMenu(this)" style="display: flex; justify-content: space-between; align-items: center; cursor: pointer; color: #333; font-size: 15px; padding: 10px; border-radius: 6px; transition: background-color 0.3s ease;">
                    <span style="display: flex; align-items: center;">💰 <span style="margin-left: 10px;">Cost</span></span>
                    ▼
                </div>
                <div style="display: none; padding-left: 25px;">
                    <a href="/Home/Cost" onclick="setActive(this)"
                       style="display: block; text-decoration: none; color: #555; font-size: 14px; padding: 6px 0; transition: background-color 0.3s ease;">Analysis</a>
                </div>
            </div>

            <!-- People -->
            <div style="margin-bottom: 12px;">
                <div onclick="toggleMenu(this)" style="display: flex; justify-content: space-between; align-items: center; cursor: pointer; color: #333; font-size: 15px; padding: 10px; border-radius: 6px; transition: background-color 0.3s ease;">
                    <span style="display: flex; align-items: center;">👥 <span style="margin-left: 10px;">People</span></span>
                    ▼
                </div>
                <div style="display: none; padding-left: 25px;">
                    <a href="/Home/People" onclick="setActive(this)"
                       style="display: block; text-decoration: none; color: #555; font-size: 14px; padding: 6px 0; transition: background-color 0.3s ease;">Team</a>
                </div>
            </div>

            <!-- Production Menu -->
            <details style="margin-bottom: 12px; font-family: sans-serif;">
                <summary style="display: flex; justify-content: space-between; align-items: center; cursor: pointer; color: #333; font-size: 15px; padding: 10px; border-radius: 6px; background-color: #f9f9f9; transition: background-color 0.3s ease;">
                    <span style="display: flex; align-items: center;">🏭 <span style="margin-left: 10px;">Production</span></span>
                    <span style="margin-left: auto;">▼</span>
                </summary>
                <div style="padding-left: 25px; padding-top: 8px;">
                    <a href="/Home/Production"
                       style="display: block; text-decoration: none; color: #555; font-size: 14px; padding: 6px 0; transition: background-color 0.3s ease;">Plan</a>
                    <a href="/Home/Loss_analysis"
                       style="display: block; text-decoration: none; color: #555; font-size: 14px; padding: 6px 0; transition: background-color 0.3s ease;">Loss_analysis</a>
                </div>
            </details>

            <!-- Production Report -->
            <div>
                <div onclick="toggleMenu(this)" style="display: flex; justify-content: space-between; align-items: center; cursor: pointer; color: #333; font-size: 15px; padding: 10px; border-radius: 6px; transition: background-color 0.3s ease;">
                    <span style="display: flex; align-items: center;">📊 <span style="margin-left: 10px;">Prod. Report</span></span>
                    ▼
                </div>
                <div style="display: none; padding-left: 25px;">
                    <a href="/Home/Pro_Report" onclick="setActive(this)"
                       style="display: block; text-decoration: none; color: #555; font-size: 14px; padding: 6px 0; transition: background-color 0.3s ease;">Summary</a>
                </div>
            </div>
            <!-- Logout Button -->
            <a href="/Account/Logout" style="
            position: absolute;
            bottom: 100px;
            left: 20px;
            width: 180px;
            display: flex;
            align-items: center;
            text-decoration: none;
            color:white;
            font-size: 18px;
            padding: 10px;
            border-radius: 6px;
            background-color: red;
            transition: background-color 0.3s ease;">
                🚪 <span style="margin-left: 10px;">Logout</span>
            </a>
        </nav>

    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div>
            &copy; 2025 - Spiro. All Rights Reserved. Design and Developed by PiTech.
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
